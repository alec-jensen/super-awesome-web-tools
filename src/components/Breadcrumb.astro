---
// Custom names for breadcrumb segments
const BREADCRUMB_NAMES: Record<string, string> = {
  'app': 'Home',
  'link': 'Link Shortener',
  'paste': 'Pastebin',
  'upload': 'File Upload',
  'chat': 'Chat',
  'security': 'Security',
  'login': 'Login',
  'register': 'Register',
  'api': 'API',
};

// Generate breadcrumb items from the current URL path
const { pathname } = Astro.url;

// Parse the path into segments
const segments = pathname
  .split('/')
  .filter(segment => segment.length > 0);

// Only show breadcrumbs if we're inside /app
if (!segments.includes('app')) {
  segments.length = 0; // Clear segments to not show breadcrumbs
}

// Build breadcrumb items starting from /app
const breadcrumbs: Array<{ label: string; href: string }> = [];

let currentPath = '';
let foundApp = false;

for (const segment of segments) {
  currentPath += `/${segment}`;
  
  // Start building breadcrumbs from /app onwards
  if (segment === 'app') {
    foundApp = true;
    breadcrumbs.push({
      label: BREADCRUMB_NAMES[segment] || segment,
      href: currentPath
    });
    continue;
  }
  
  if (foundApp) {
    // Use custom name if available, otherwise capitalize and format
    const label = BREADCRUMB_NAMES[segment] || 
      segment
        .split('-')
        .map(word => word.charAt(0).toUpperCase() + word.slice(1))
        .join(' ');
    
    breadcrumbs.push({
      label,
      href: currentPath
    });
  }
}
---

{breadcrumbs.length > 1 && (
  <nav class="breadcrumb" aria-label="Breadcrumb">
    <ol>
      {breadcrumbs.map((crumb, index) => (
        <li>
          {index < breadcrumbs.length - 1 ? (
            <>
              <a href={crumb.href}>{crumb.label}</a>
              <span class="separator" aria-hidden="true">/</span>
            </>
          ) : (
            <span class="current" aria-current="page">{crumb.label}</span>
          )}
        </li>
      ))}
    </ol>
  </nav>
)}

<style>
  .breadcrumb {
    width: 100%;
    max-width: 960px;
    margin: 0 auto;
    padding: 1rem 0 0;
  }

  ol {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    opacity: 0.8;
  }

  li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  a {
    color: inherit;
    text-decoration: none;
    transition: opacity 0.2s ease, text-decoration 0.2s ease;
  }

  a:hover,
  a:focus-visible {
    opacity: 0.7;
    text-decoration: underline;
  }

  .separator {
    user-select: none;
    opacity: 0.5;
  }

  .current {
    font-weight: 500;
    opacity: 1;
  }

  @media (max-width: 640px) {
    .breadcrumb {
      padding: 0.75rem 0 0;
    }

    ol {
      font-size: 0.8125rem;
      gap: 0.375rem;
    }

    li {
      gap: 0.375rem;
    }
  }
</style>
