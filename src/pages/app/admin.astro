---
import Layout from '../../layouts/Layout.astro';
import { getSessionUser } from '../../lib/auth/session.js';

export const prerender = false;

const sessionUser = await getSessionUser(Astro.cookies);

if (!sessionUser) {
  return Astro.redirect('/app/login');
}

if (sessionUser.role !== 'admin') {
  return Astro.redirect('/app');
}
---

<Layout title="Admin Panel">
  <div class="admin-container">
    <h1>Admin Panel</h1>
    
    <!-- SMTP Test Panel -->
    <section class="admin-section">
      <h2>SMTP Configuration Test</h2>
      <p>Send a test email to verify SMTP settings are working correctly.</p>
      
      <div class="form-group">
        <label for="test-email">Test Email Address:</label>
        <input type="email" id="test-email" placeholder="test@example.com" />
      </div>
      
      <button id="smtp-test-btn" class="btn btn-primary">Send Test Email</button>
      <div id="smtp-message" class="message"></div>
    </section>

    <!-- Account Management Panel -->
    <section class="admin-section">
      <h2>Account Management</h2>
      
      <div class="form-group">
        <label for="account-email">User Email:</label>
        <input type="email" id="account-email" placeholder="user@example.com" />
      </div>
      
      <div class="button-group">
        <button id="unlock-account-btn" class="btn btn-warning">Unlock Account</button>
        <button id="delete-account-btn" class="btn btn-danger">Delete Account</button>
      </div>
      
      <div id="account-message" class="message"></div>
    </section>

    <!-- Locked Accounts List -->
    <section class="admin-section">
      <h2>Locked Accounts</h2>
      <button id="refresh-locked-btn" class="btn btn-secondary">Refresh List</button>
      <div id="locked-accounts-list" class="accounts-list">
        <p class="loading">Loading...</p>
      </div>
    </section>
  </div>

  <style>
    .breadcrumb {
      max-width: 900px;
      margin: 1rem auto 0;
      padding: 0 2rem;
      font-size: 0.9rem;
    }

    .breadcrumb a {
      color: #0066cc;
      text-decoration: none;
    }

    .breadcrumb a:hover {
      text-decoration: underline;
    }

    .breadcrumb .separator {
      margin: 0 0.5rem;
      color: #999;
    }

    .admin-container {
      max-width: 900px;
      margin: 2rem auto;
      padding: 2rem;
    }

    h1 {
      color: #333;
      margin-bottom: 2rem;
      padding-bottom: 1rem;
      border-bottom: 2px solid #0066cc;
    }

    .admin-section {
      background: white;
      border-radius: 8px;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .admin-section h2 {
      margin-top: 0;
      color: #555;
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }

    .admin-section p {
      color: #666;
      margin-bottom: 1.5rem;
    }

    .form-group {
      margin-bottom: 1.5rem;
    }

    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      color: #555;
      font-weight: 500;
    }

    .form-group input {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 1rem;
    }

    .form-group input:focus {
      outline: none;
      border-color: #0066cc;
      box-shadow: 0 0 0 3px rgba(0,102,204,0.1);
    }

    .btn {
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: 4px;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.2s ease;
      font-weight: 500;
    }

    .btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .btn:disabled:hover {
      transform: none;
      box-shadow: none;
    }

    .btn-primary {
      background: #0066cc;
      color: white;
    }

    .btn-primary:hover:not(:disabled) {
      background: #0052a3;
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(0, 102, 204, 0.4);
    }

    .btn-primary:active:not(:disabled) {
      transform: translateY(0);
      box-shadow: 0 2px 6px rgba(0, 102, 204, 0.3);
    }

    .btn-secondary {
      background: #6c757d;
      color: white;
      margin-bottom: 1rem;
    }

    .btn-secondary:hover:not(:disabled) {
      background: #5a6268;
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(108, 117, 125, 0.4);
    }

    .btn-secondary:active:not(:disabled) {
      transform: translateY(0);
      box-shadow: 0 2px 6px rgba(108, 117, 125, 0.3);
    }

    .btn-warning {
      background: #ffc107;
      color: #000;
    }

    .btn-warning:hover:not(:disabled) {
      background: #e0a800;
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(255, 193, 7, 0.4);
    }

    .btn-warning:active:not(:disabled) {
      transform: translateY(0);
      box-shadow: 0 2px 6px rgba(255, 193, 7, 0.3);
    }

    .btn-danger {
      background: #dc3545;
      color: white;
    }

    .btn-danger:hover:not(:disabled) {
      background: #c82333;
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
    }

    .btn-danger:active:not(:disabled) {
      transform: translateY(0);
      box-shadow: 0 2px 6px rgba(220, 53, 69, 0.3);
    }

    .btn-small {
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
    }

    .button-group {
      display: flex;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .message {
      margin-top: 1rem;
      padding: 0.75rem;
      border-radius: 4px;
      display: none;
    }

    .message.success {
      background: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
      display: block;
    }

    .message.error {
      background: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
      display: block;
    }

    .message.info {
      background: #d1ecf1;
      color: #0c5460;
      border: 1px solid #bee5eb;
      display: block;
    }

    .accounts-list {
      margin-top: 1rem;
    }

    .account-item {
      padding: 1rem;
      background: #f8f9fa;
      border-radius: 4px;
      margin-bottom: 0.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .account-info {
      flex: 1;
    }

    .account-email {
      font-weight: 500;
      color: #333;
    }

    .account-details {
      font-size: 0.875rem;
      color: #666;
      margin-top: 0.25rem;
    }

    .account-actions {
      display: flex;
      gap: 0.5rem;
    }

    .btn-small {
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
    }

    .loading {
      text-align: center;
      color: #666;
      font-style: italic;
    }

    .empty {
      text-align: center;
      color: #666;
      padding: 2rem;
      background: #f8f9fa;
      border-radius: 4px;
    }
  </style>

  <script>
    import { showConfirm } from '../../lib/modal.js';

    // SMTP Test
    const smtpTestBtn = document.getElementById('smtp-test-btn') as HTMLButtonElement | null;
    const testEmailInput = document.getElementById('test-email') as HTMLInputElement | null;
    const smtpMessage = document.getElementById('smtp-message');

    if (smtpTestBtn && testEmailInput && smtpMessage) {
      smtpTestBtn.addEventListener('click', async () => {
        const email = testEmailInput.value.trim();
        
        if (!email) {
          smtpMessage.className = 'message error';
          smtpMessage.textContent = 'Please enter an email address';
          return;
        }

        smtpTestBtn.disabled = true;
        smtpTestBtn.textContent = 'Sending...';
        smtpMessage.className = 'message';
        smtpMessage.style.display = 'none';

        try {
          const response = await fetch('/api/admin/test-smtp', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email })
          });

          const data = await response.json();

          if (data.ok) {
            smtpMessage.className = 'message success';
            smtpMessage.textContent = data.message;
          } else {
            smtpMessage.className = 'message error';
            smtpMessage.textContent = data.message;
          }
        } catch (err) {
          console.error('SMTP test error:', err);
          smtpMessage.className = 'message error';
          smtpMessage.textContent = 'An error occurred';
        } finally {
          smtpTestBtn.disabled = false;
          smtpTestBtn.textContent = 'Send Test Email';
        }
      });
    }

    // Account Management
    const unlockBtn = document.getElementById('unlock-account-btn');
    const deleteBtn = document.getElementById('delete-account-btn');
    const accountEmailInput = document.getElementById('account-email') as HTMLInputElement | null;
    const accountMessage = document.getElementById('account-message');

    async function performAccountAction(endpoint: string, successMessage: string, confirmMessage: string | null = null) {
      if (!accountEmailInput || !accountMessage) return;
      
      const email = accountEmailInput.value.trim();
      
      if (!email) {
        accountMessage.className = 'message error';
        accountMessage.textContent = 'Please enter an email address';
        return;
      }

      if (confirmMessage) {
        const confirmed = await showConfirm(confirmMessage, 'Confirm Action');
        if (!confirmed) return;
      }

      accountMessage.className = 'message';
      accountMessage.style.display = 'none';

      try {
        const response = await fetch(endpoint, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email })
        });

        const data = await response.json();

        if (data.ok) {
          accountMessage.className = 'message success';
          accountMessage.textContent = successMessage;
          accountEmailInput.value = '';
          // Refresh locked accounts list
          loadLockedAccounts();
        } else {
          accountMessage.className = 'message error';
          accountMessage.textContent = data.message;
        }
      } catch (err) {
        console.error('Account action error:', err);
        accountMessage.className = 'message error';
        accountMessage.textContent = 'An error occurred';
      }
    }

    if (unlockBtn) {
      unlockBtn.addEventListener('click', () => {
        performAccountAction(
          '/api/admin/unlock-account',
          'Account unlocked successfully'
        );
      });
    }

    if (deleteBtn) {
      deleteBtn.addEventListener('click', () => {
        performAccountAction(
          '/api/admin/delete-account',
          'Account deleted successfully',
          'Are you sure you want to delete this account? This action cannot be undone.'
        );
      });
    }

    // Locked Accounts List
    const lockedAccountsList = document.getElementById('locked-accounts-list');
    const refreshLockedBtn = document.getElementById('refresh-locked-btn');

    async function loadLockedAccounts() {
      if (!lockedAccountsList) return;

      lockedAccountsList.innerHTML = '<p class="loading">Loading...</p>';

      try {
        const response = await fetch('/api/admin/locked-accounts');
        const data = await response.json();

        if (data.ok && data.accounts) {
          if (data.accounts.length === 0) {
            lockedAccountsList.innerHTML = '<p class="empty">No locked accounts</p>';
          } else {
            lockedAccountsList.innerHTML = data.accounts.map((account: any) => `
              <div class="account-item">
                <div class="account-info">
                  <div class="account-email">${escapeHtml(account.email)}</div>
                  <div class="account-details">
                    Locked until: ${new Date(account.locked_until).toLocaleString()}
                    | Failed attempts: ${account.failed_login_attempts}
                  </div>
                </div>
                <div class="account-actions">
                  <button class="btn btn-warning btn-small unlock-btn" data-email="${escapeHtml(account.email)}">
                    Unlock
                  </button>
                </div>
              </div>
            `).join('');

            // Add event listeners to unlock buttons
            document.querySelectorAll('.unlock-btn').forEach(btn => {
              btn.addEventListener('click', async (e) => {
                const target = e.target as HTMLElement;
                const email = target.getAttribute('data-email');
                if (accountEmailInput && email) {
                  accountEmailInput.value = email;
                  await performAccountAction(
                    '/api/admin/unlock-account',
                    'Account unlocked successfully'
                  );
                }
              });
            });
          }
        } else {
          lockedAccountsList.innerHTML = '<p class="error">Failed to load locked accounts</p>';
        }
      } catch (err) {
        console.error('Load locked accounts error:', err);
        lockedAccountsList.innerHTML = '<p class="error">An error occurred</p>';
      }
    }

    if (refreshLockedBtn) {
      refreshLockedBtn.addEventListener('click', loadLockedAccounts);
    }

    // Helper function to escape HTML
    function escapeHtml(text: string): string {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Load locked accounts on page load
    loadLockedAccounts();
  </script>
</Layout>
